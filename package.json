{
  "name": "gitcv-api",
  "description": "gitcv.io api layer",
  "private": true,
  "version": "0.0.3",
  "repository": "git@github.com:isalikov/gitcv-api.git",
  "author": "Iakov Salikov <salikovpro@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon ./src/server.ts",
    "dist": "tsc",
    "lint": "eslint .",
    "prepare": "husky install",
    "start": "node ./dist/server.js",
    "test": "jest"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix",
      "tsc"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  },
  "eslintIgnore": [
    "dist",
    "node_modules"
  ],
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 4
  },
  "dependencies": {
    "@isalikov/gitcv-types": "^0.0.2",
    "@koa/cors": "^3.3.0",
    "@koa/router": "^10.1.1",
    "@octokit/core": "^3.6.0",
    "@types/koa": "^2.13.4",
    "axios": "^0.27.2",
    "dotenv-flow": "^3.2.0",
    "http-status": "^1.5.0",
    "koa": "^2.13.4",
    "koa-morgan": "^1.0.1",
    "mongoose": "^6.3.1",
    "qs": "^6.11.0",
    "redis": "^4.0.6"
  },
  "devDependencies": {
    "@octokit/openapi-types": "^13.7.0",
    "@octokit/types": "^7.2.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv-flow": "^3.2.0",
    "@types/http-status": "^1.1.2",
    "@types/jest": "^29.0.0",
    "@types/koa-morgan": "^1.0.5",
    "@types/koa__cors": "^3.3.0",
    "@types/koa__router": "^8.0.11",
    "@types/mongoose": "^5.11.97",
    "@types/redis": "^4.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "husky": "^7.0.4",
    "jest": "^28.0.8",
    "lint-staged": "^13.1.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.5.0",
    "tsc": "^2.0.4",
    "typescript": "^4.5.5"
  }
}
